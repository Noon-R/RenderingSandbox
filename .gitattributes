# Auto detect text files and perform LF normalization
* text=auto

# C++ files
*.cpp text diff=cpp
*.h text diff=cpp
*.hpp text diff=cpp
*.c text diff=cpp
*.cc text diff=cpp
*.cxx text diff=cpp

# HLSL Shader files
*.hlsl text
*.fx text
*.fxh text
*.hlsli text

# Visual Studio Solution/Project files
*.sln text eol=crlf
*.slnx text eol=crlf
*.vcxproj text eol=crlf
*.vcxproj.filters text eol=crlf
*.vcxproj.user text eol=crlf

# Documentation
*.md text
*.txt text
*.rtf text

# Scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf
*.sh text eol=lf

# Binary files
*.exe binary
*.dll binary
*.lib binary
*.obj binary
*.pdb binary
*.ilk binary
*.dds binary
*.png binary
*.jpg binary
*.jpeg binary
*.bmp binary
*.tga binary
*.hdr binary
*.exr binary
*.fbx binary
*.obj binary
*.gltf binary
*.glb binary
*.bin binary
